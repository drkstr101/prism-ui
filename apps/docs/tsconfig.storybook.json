{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "emitDecoratorMetadata": true,
    "noEmit": false
  },
  "exclude": ["src/stories/**/*.spec.ts", "src/stories/**/*.test.ts"],
  "include": [
    "src/stories/**/*.ts",
    "src/stories/**/*.js",
    "src/stories/**/*.jsx",
    "src/stories/**/*.tsx",
    "src/stories/**/*.mdx",
    ".storybook/*.jsx",
    ".storybook/*.tsx"
  ]
}
