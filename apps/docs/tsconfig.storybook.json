{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "emitDecoratorMetadata": true,
    "noEmit": false
  },
  "exclude": ["stories/**/*.spec.ts", "stories/**/*.test.ts"],
  "include": [
    "stories/**/*.ts",
    "stories/**/*.js",
    "stories/**/*.jsx",
    "stories/**/*.tsx",
    "stories/**/*.mdx",
    ".storybook/*.jsx",
    ".storybook/*.tsx"
  ]
}
